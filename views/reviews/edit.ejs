<%- include("../partials/header") %> 
<div class="container-fluid">
	<div class="row justify-content-center">
	<h1 class="col-md-12 text-center" >
	Edit Review <%= coffee.name%>
	</h1>
	<div class="col-sm-12 col-md-5 col-lg-3">
	<form action="/menu/<%= coffee._id%>/review/<%= review._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="review[text]" value="<%=review.text%>" >
		</div>
		<div class="form-group">
		<button class="btn btn-md btn-block btn-primary"type="submit">
			Submit
		</button>
		<a href="/menu/<%= coffee._id%>">Go back</a>
		</div>
	</form>
	</div>
	</div>
</div>


<%- include("../partials/footer") %> 